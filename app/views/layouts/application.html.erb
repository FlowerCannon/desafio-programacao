<!DOCTYPE html>
<html>
  <head>
    <title>Desafio de Programação -- Filmes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_link_tag 'bootstrap.min' %>
    <%= javascript_include_tag 'application' %>

    <%= stylesheet_link_tag "#{controller_path}_#{action_name}" %>

    <%= javascript_include_tag "https://unpkg.com/axios/dist/axios.min.js" %>
  </head>
  <body>
    <div id="app">
        <%= yield %>
    </div>

    <%= yield :after_content %>

    <%= javascript_include_tag "#{controller_path}_#{action_name}" %>
  </body>
</html>
